<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyApp" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/purple_700</item>
    </style>

    <style name="Theme.MyApp.SplashScreen.Base" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Theme.MyApp</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splashscreen
        </item>
    </style>

    <style name="Theme.MyApp.SplashScreen" parent="Theme.MyApp.SplashScreen.Base">
        <item name="windowSplashScreenBackground">@color/white</item>
    </style>
</resources>
