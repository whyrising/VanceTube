<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="NightAdjusted.Theme.Vance" parent="android:Theme.Material.Light.NoActionBar">
    <item name="android:windowLightStatusBar">true</item>
  </style>

  <style name="PlatformAdjusted.Theme.Vance" parent="NightAdjusted.Theme.Vance">
    <item name="android:statusBarColor">@color/black_900</item>
  </style>

  <!-- Main theme. -->
  <style name="Theme.Vance" parent="PlatformAdjusted.Theme.Vance" />

  <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
    <item name="android:windowBackground">@color/white</item>
    <item name="android:windowLightStatusBar">true</item>
  </style>

  <style name="Theme.Vance.Splash" parent="NightAdjusted.Theme.Splash">
    <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splashscreen</item>
    <item name="postSplashScreenTheme">@style/Theme.Vance</item>
  </style>
</resources>
