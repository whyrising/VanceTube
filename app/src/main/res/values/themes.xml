<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="NightAdjusted.Theme.Vance" parent="android:Theme.Material.Light.NoActionBar">
    <item name="android:windowLightStatusBar">true</item>
    <item name="android:windowLightNavigationBar" tools:targetApi="27">true
    </item>
  </style>

  <style name="PlatformAdjusted.Theme.Vance" parent="NightAdjusted.Theme.Vance">
    <item name="android:statusBarColor">@color/black_900</item>
  </style>

  <!-- Main theme. -->
  <style name="Theme.Vance" parent="PlatformAdjusted.Theme.Vance">
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:windowLightStatusBar">true</item>
  </style>

  <style name="Theme.Vance.Splash.Base" parent="Theme.SplashScreen">
    <item name="postSplashScreenTheme">@style/Theme.Vance</item>
    <item name="windowSplashScreenAnimationDuration">1000</item>
    <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splashscreen
    </item>
  </style>

  <style name="Theme.Vance.Splash" parent="Theme.Vance.Splash.Base">
    <item name="windowSplashScreenBackground">@color/white</item>
  </style>
</resources>
