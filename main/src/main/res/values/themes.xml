<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

  <!-- Allows us to override night specific attributes in the
       values-night folder. -->
  <style name="NightAdjusted.Theme.Ty" parent="android:Theme.Material.Light.NoActionBar" />

  <!-- The final theme we use -->
  <style name="Theme.Ty" parent="NightAdjusted.Theme.Ty" />

  <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
    <item name="android:windowLightStatusBar" tools:targetApi="23">true
    </item>
    <item name="android:windowLightNavigationBar" tools:targetApi="27">
      true
    </item>
    <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_dark</item>
  </style>

  <style name="Theme.Ty.Splash" parent="NightAdjusted.Theme.Splash">
    <item name="postSplashScreenTheme">@style/Theme.Ty</item>
  </style>

</resources>