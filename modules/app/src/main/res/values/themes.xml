<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="NightAdjusted.Theme.Ty" parent="android:Theme.Material.Light.NoActionBar">
    <item name="android:windowLightStatusBar">true</item>
  </style>

  <style name="PlatformAdjusted.Theme.Ty" parent="NightAdjusted.Theme.Ty">
    <item name="android:statusBarColor">@color/black_900</item>
  </style>

  <!-- Main theme. -->
  <style name="Theme.Ty" parent="PlatformAdjusted.Theme.Ty" />

  <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
    <item name="android:windowBackground">@color/white</item>
    <item name="android:windowLightStatusBar">true</item>
  </style>

  <style name="Theme.Ty.Splash" parent="NightAdjusted.Theme.Splash">
    <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splashscreen</item>
    <item name="postSplashScreenTheme">@style/Theme.Ty</item>
  </style>
</resources>
